{
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "script"
    },
    "extends": ["google", "plugin:polymer/polymer-2"],
    "env": {
      "node": true
    },
    "plugins": [
      "polymer"
    ],
    "rules": {
      "no-console": "off",
      "no-invalid-this": "off",
      "no-undef": "off",
      "guard-for-in": "warn"
    }
  }